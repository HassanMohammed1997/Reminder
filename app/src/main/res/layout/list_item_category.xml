<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="obj"
            type="com.project.semicolon.reminder.database.entity.Category" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:onClick="@{(view)->obj.onListItemClickListener.onItemClicked(view, obj.adapterPosition) }"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/badge_txt"
            backgroundRes="@{obj.getDrawable()}"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLength="1"
            android:text="@{obj.badgeTitle()}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white" />

        <!--     <ImageView
                 android:id="@+id/selected"
                 android:layout_width="42dp"
                 android:layout_height="42dp"
                 android:scaleType="center"
                 android:visibility="gone"
                 android:background="@drawable/selected_bg"
                 app:srcCompat="@drawable/ic_checked"
                 android:layout_centerVertical="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{obj.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/main_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/counter_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:hint="@string/no_notes_hint"
                    android:maxLines="1"
                    android:text="@{obj.counter()}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/secondary_text"
                    android:textColorHint="@color/secondary_text" />

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:text="@{obj.date()}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/hint_text" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>


